            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dropdownmenu.DropDownMenuActivity"></activity>
        <activity android:name=".androidtagview.AndroidtagViewActivity"></activity>
        <activity android:name=".activity.SmoothCheckBoxActivity"></activity>
        <activity android:name=".activity.GridPasswordViewActivity"></activity>
        <activity android:name=".activity.AnimTextViewActivity"></activity>
        <activity android:name=".activity.MaterialPatternLockViewActivity"></activity>
        <activity android:name=".activity.TubatuViewPagerActivity"></activity>
        <activity android:name=".activity.OverscrollScaleActivity" ></activity>
    </application>

</manifest>