<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ufreedom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_background"
    android:layout_width="315dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:paddingBottom="25dp"
    android:background="@drawable/bg_round_dialog">


    <LinearLayout
        android:id="@+id/layHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="已获得金币"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            
            <FrameLayout
                android:id="@+id/laySignedDay"
                android:layout_width="wrap_content"
                android:layout_height="85dp">

                <com.paowang.yummytextswitcher.YummyTextSwitcher
                    android:id="@+id/yummyTextSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    ufreedom:textColor="@android:color/black"
                    ufreedom:textSize="80sp"
                    android:textSize="90dp" />

                
                <ImageView
                    android:id="@+id/maskView"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/sign_nub_mask"
                    android:layout_marginBottom="-2dp"
                    />

                <ImageView
                    android:id="@+id/maskViewTop"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center_horizontal"
                    android:rotation="180"
                    android:background="@drawable/sign_nub_mask"/>
                
            </FrameLayout>
            
        </LinearLayout>


        
    </LinearLayout>


    <FrameLayout
        android:id="@+id/layGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layHead"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/card"
            android:layout_width="293dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/pop_sign_bg"
            android:paddingLeft="23dp"
            android:paddingTop="59dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="YummyTextSwitcher"
                android:textColor="@android:color/black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="17dp"
                android:background="#FFC801"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="+80"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/contribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/gold"
                android:background="#FFC801"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="+189"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </RelativeLayout>


       

    </FrameLayout>


    

</RelativeLayout>


